{
  "name": "alks-vsc",
  "displayName": "alks-vsc",
  "description": "ALKS plugin for VS Code",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:alks-vsc.newSession"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "alks-vsc.newSession",
        "title": "ALKS: New Session"
      },
      {
        "command": "alks-vsc.newConsole",
        "title": "ALKS: Open Console"
      }
    ],
    "configuration": {
      "title": "ALKS",
      "properties": {
        "alks.server": {
          "type": "string",
          "default": "",
          "scope": "resource",
          "description": "URL to ALKS Server API"
        },
        "alks.token": {
          "type": "string",
          "default": "",
          "scope": "machine",
          "description": "ALKS refresh token. Generate on the ALKS Website."
        },
        "alks.accounts": {
          "type": [
            "array",
            "null"
          ],
          "default": null,
          "scope": "window",
          "description": "List of ALKS accounts used by the application."
        }
      },
      "configuration": {
        "title": "TypeScript",
        "properties": {
          "typescript.useCodeSnippetsOnMethodSuggest": {
            "type": "boolean",
            "default": false,
            "description": "Complete functions with their parameter signature."
          },
          "typescript.tsdk": {
            "type": [
              "string",
              "null"
            ],
            "default": null,
            "description": "Specifies the folder path containing the tsserver and lib*.d.ts files to use."
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.2.0",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "typescript": "^4.9.3"
  },
  "dependencies": {
    "@types/node-fetch": "^2.6.2",
    "alks.js": "^2.5.1"
  }
}
